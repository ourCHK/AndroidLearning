<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/emptyFragment">
    <fragment
        android:id="@+id/emptyFragment"
        android:name="com.chk.androidlearning.ui.fragment.EmptyFragment"
        android:label="EmptyFragment"
        tools:layout="@layout/fragment_empty">
        <action
            android:id="@+id/action_emptyFragment_to_bFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right"
            app:destination="@id/bFragment" />
        <action
            android:id="@+id/action_emptyFragment_to_aFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right"
            app:destination="@id/aFragment" />
    </fragment>
    <fragment
        android:id="@+id/aFragment"
        android:name="com.chk.androidlearning.ui.fragment.AFragment"
        android:label="AFragment"
        tools:layout="@layout/fragment_a">
        <action
            android:id="@+id/action_aFragment_to_cFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right"
            app:destination="@id/cFragment" />
    </fragment>

    <fragment
        android:id="@+id/bFragment"
        android:name="com.chk.androidlearning.ui.fragment.BFragment"
        android:label="BFragment"
        tools:layout="@layout/fragment_b"/>
    <fragment android:id="@+id/cFragment"
        android:name="com.chk.androidlearning.ui.fragment.CFragment"
        android:label="CFragment"
        tools:layout="@layout/fragment_c"
        />
</navigation>